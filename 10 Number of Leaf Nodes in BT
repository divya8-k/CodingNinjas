class BinaryTreeNode:
    def __init__(self, data):
        self.data = data
        self.left = None
        self.right = None


def noOfLeafNodes(root):
    #Your code goes here
    if root == None:
        return 0
    
    if root.right == None and root.left == None:
        return 1
    
    numRight = noOfLeafNodes(root.right)
    numLeft = noOfLeafNodes(root.left)
    return numRight + numLeft
  
    
def treeInput():
    rootData = int(input())
    if rootData == -1:
        return None
    root = BinaryTreeNode(rootData)
    leftTree = treeInput()
    rightTree = treeInput()
    root.left = leftTree
    root.right = rightTree
    return root



root = treeInput()  
print(noOfLeafNodes(root))
